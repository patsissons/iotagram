{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",

    "paths": {
      "*": [ "src/types/*" ]
    }
  },
  "files": [
    "src/app.tsx"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
